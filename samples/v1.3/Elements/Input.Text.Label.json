{	"type": "AdaptiveCard",	"version": "1.3",	"body": [		{			"type": "TextBlock",			"text": "Please fill out the following form:",			"size": "Medium",			"wrap": true		},		{			"type": "Input.Text",			"id": "fullName",			"placeholder": "First Last",			"label": "Full Name:",			"isRequired": true,			"errorMessage": "Name is required"		},		{			"type": "Input.Text",			"id": "nickName",			"label": "Nickname:"		},		{			"type": "Input.Number",			"id": "number",			"label": "What's your favorite number?",			"isRequired": true,			"errorMessage": "Favorite number is required"		},		{			"type": "Input.Date",			"id": "dob",			"label": "Date of Birth",			"isRequired": true,			"errorMessage": "Date of birth is required"		},		{			"type": "Input.Date",			"id": "start",			"label": "Start date if known:"		}	],	"actions": [		{			"type": "Action.Submit",			"title": "Send!"		}	]}